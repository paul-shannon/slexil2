
default:
	@echo movieCurl
	@echo scp
	@echo venv
	@echo html
	@echo publish
	@echo view
	@echo viewRemote
	@echo eafscp

venv:
	@echo source /Users/paul/github/slexil2/py3105slexil/bin/activate

movieCurl:
	curl -I https://slexildata.artsrn.ualberta.ca/tlingit/$(VID)

scp:
	scp $(VID) pshannon@206.12.95.4:www/tlingit
	
html:
	python ../../../utils/eaf2html.py  \
	                     --eaf $(EAF) \
                        --tierGuide ../tierGuide.yaml \
                        --helpFile ../help.html \
                        --helpButtonLabel "How To" \
                        --pageTitle $(TITLE) \
                        --fixOverlappingTimeSegments \
	                     --fontSizeControls

publish:
	scp index.html pshannon@206.12.95.4:www/tlingit/$(HTML.FILE)

view:
	open index.html

viewRemote:
	open https://slexildata.artsrn.ualberta.ca/tlingit/$(HTML.FILE)

eafscp:
	scp $(EAF) pshannon@206.12.95.4:www/tlingit/eaf/